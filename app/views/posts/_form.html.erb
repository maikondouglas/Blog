<%= form_with(model: post, local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :title, style: 'display: block', class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :author, style: 'display: block', class: 'form-label' %>
    <%= form.text_field :author, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :body, style: 'display: block', class: 'form-label' %>
    <%= form.text_area :body, class: 'form-control', rows: 5 %>
  </div>

  <div class="mb-3">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
